# MQTT Broker Configuration
# Copy this file to mqtt.env and update with your actual values
# Authentication is handled automatically via JWT tokens (no username/password needed)
MQTT_BROKER_HOST=your-mqtt-broker-host.com
MQTT_BROKER_PORT=8883

# Web Container Configuration for Modbus HTTP requests
# Using localhost since both containers use host networking
WEB_CONTAINER_HOST=localhost
WEB_CONTAINER_PORT=5000

