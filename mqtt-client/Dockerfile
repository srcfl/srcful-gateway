# MQTT Client Container for Srcful Gateway
FROM python:3.11-slim

# Set working directory
WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    ca-certificates \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements first for better Docker layer caching
COPY requirements.txt .

# Install Python dependencies
RUN pip install --no-cache-dir -r requirements.txt

# Copy application code
COPY mqtt_client.py .

# Create non-root user for security
RUN groupadd -r mqttuser && useradd -r -g mqttuser mqttuser
RUN chown -R mqttuser:mqttuser /app

# Switch to non-root user
USER mqttuser

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD python -c "import socket; socket.create_connection(('$MQTT_BROKER_HOST', int('$MQTT_BROKER_PORT')), timeout=5)" || exit 1

# Run the MQTT client
CMD ["python", "mqtt_client.py"]